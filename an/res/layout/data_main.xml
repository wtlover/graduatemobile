<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Whit"
    android:orientation="vertical"
    tools:context="com.bgwcontact.action.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="3"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imgeJiantou2"
            android:layout_width="25dp"
            android:clickable="true"
            android:layout_height="match_parent"
            android:contentDescription="@string/action_settings"
            android:src="@drawable/jiantou" />

        <TextView
            android:id="@+id/contactTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="应用界面"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/shopInfoView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/dataListView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:cacheColorHint="@android:color/transparent"
        android:fastScrollEnabled="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/contacts_call"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/dadianhua"
            android:descendantFocusability="blocksDescendants"
            android:gravity="center" />

        <Button
            android:id="@+id/contacts_email"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/youjian"
            android:descendantFocusability="blocksDescendants"
            android:gravity="center" />

        <Button
            android:id="@+id/contacts_duanxin"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/dianxin"
            android:descendantFocusability="blocksDescendants"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>