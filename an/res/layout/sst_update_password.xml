<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f59f23"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="修改密码"
        android:textColor="@color/Whit"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="9"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/sstgray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/Whit"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="请输入新密码："
            android:textColor="@color/sstgray" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/sstgray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/White"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@null"
                android:hint="not null"
                android:numeric="integer"
                android:paddingLeft="5dp"
                android:textSize="13sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/sstgray" />

        <Button
            android:id="@+id/btn"
            style="@style/white_20size_font"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="@dimen/margin_size10"
            android:layout_marginTop="@dimen/margin_size30"
            android:background="@anim/yy_btnlogin_selector"
            android:text="确定" />
    </LinearLayout>

</LinearLayout>