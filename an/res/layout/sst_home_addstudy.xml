<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_logo_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="添加资料"
        android:textColor="@color/Whit"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:layout_marginTop="20dp"
        android:background="@color/sstgray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/White"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="资料标题：" />

        <EditText
            android:id="@+id/etTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@null"
            android:hint="不能为空"
            android:textSize="13dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="@color/sstgray" />

    <LinearLayout
        android:id="@+id/ll_card_state"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/White"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="2"
            android:text="有效资料链接：" />

        <EditText
            android:id="@+id/eturl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@null"
            android:hint="不能为空，请填写URL格式的链接"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="@color/sstgray" />

    <Button
        android:id="@+id/btnAdd"
        style="@style/white_20size_font"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="@dimen/margin_size10"
        android:layout_marginTop="20dp"
        android:background="@anim/yy_btnlogin_selector"
        android:text="添加纪录" />

</LinearLayout>