<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="52dip"
    android:gravity="bottom"
    android:orientation="horizontal"
    android:weightSum="21" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dip"
        android:layout_weight="7"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="2" >

        <!-- android:background="@drawable/btn_chatbtn2" -->

        <ImageButton
            android:id="@+id/chat_textditor_ib_plus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/btn_chatbtn2"
            android:src="@drawable/ic_chat_plus_normal" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@color/msg_editor_backgroud" >

            <!-- android:background="@drawable/btn_chatbtn2" -->

            <ImageButton
                android:id="@+id/chat_textditor_ib_keyboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_chatbtn2"
                android:src="@drawable/ic_chat_keyboard_normal"
                android:visibility="gone" />

            <!-- android:background="@drawable/btn_chatbtn2" -->

            <ImageButton
                android:id="@+id/chat_textditor_ib_emote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_chatbtn2"
                android:src="@drawable/ic_chat_emote_normal" />
        </RelativeLayout>
    </LinearLayout>

    <!-- android:background="@drawable/edittext_sendmsg" -->

    <com.bgw.an.app.activity.chat.view.EmoticonsEditText
        android:id="@+id/chat_textditor_eet_editer"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dip"
        android:background="@anim/button_color_selector"
        android:gravity="center_vertical"
        android:imeOptions="flagNoExtractUi"
        android:maxHeight="120dip"
        android:maxLength="4000"
        android:minHeight="46dip"
        android:paddingLeft="15dp"
        android:paddingTop="3dip" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dip"
        android:layout_weight="4"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <!-- android:background="@drawable/btn_chatbtn3" -->

        <Button
            android:id="@+id/chat_textditor_btn_send"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:minWidth="50dip"
            android:layout_marginBottom="1dp"
            android:background="@anim/send_button_color_selector"
            android:text="@string/chat_btn_send"
            android:textColor="@color/White"
            android:visibility="gone" />

        <!-- android:background="@drawable/btn_chatbtn2" -->

        <ImageView
            android:id="@+id/chat_textditor_iv_audio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/btn_chatbtn2"
            android:clickable="true"
            android:minWidth="50dip"
            android:src="@drawable/ic_chat_audio_normal" />
    </LinearLayout>

</LinearLayout>