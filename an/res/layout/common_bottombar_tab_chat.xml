<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout2"
    android:layout_width="0dip"
    android:layout_height="60dp"
    android:layout_weight="1"
    android:clickable="true"
    android:background="@anim/linearlayout01"
    android:paddingBottom="2dip" >

    <com.bgw.an.app.activity.chat.view.HandyTextView
        android:id="@+id/tab_chat_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:drawableTop="@drawable/ic_tab_chat"
        android:gravity="center_horizontal"
        android:shadowDx="0.0"
        android:shadowDy="-1.0"
        android:shadowRadius="1.0"
        android:text="@string/maintab_text_message"
        android:textColor="@color/maintab_text_color"
        android:textSize="13sp" />

    <com.bgw.an.app.activity.chat.view.HandyTextView
        android:id="@+id/tab_chat_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/tab_chat_label"
        android:layout_marginRight="-14dip"
        android:layout_marginTop="1dip"
        android:background="@drawable/bg_msgtip_normal"
        android:gravity="center"
        android:marqueeRepeatLimit="1"
        android:minWidth="20dip"
        android:singleLine="true"
        android:textColor="@color/red_true"
        android:textSize="11sp"
        android:textStyle="bold"
        android:visibility="gone" />

</RelativeLayout>