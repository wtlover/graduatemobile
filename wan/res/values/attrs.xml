<?xml version="1.0" encoding="utf-8"?>
<resources>
	<declare-styleable name="FragmentIndicatorLayout">
	    <attr name="numberOfitems" format="integer" />
	</declare-styleable>
	<declare-styleable name="TabbarItemLayout">
        <attr name="icon" format="integer" />
        <attr name="text" format="integer" />
        <attr name="textalignment" >
             <enum name="left" value="0" />
             <enum name="center" value="1" />
             <enum name="right" value="2" />
        </attr>
        <attr name="lefttext" format="integer" />            
    </declare-styleable>
    
	<declare-styleable name="roundedimageview">
        <attr name="border_thickness" format="dimension" />
        <attr name="border_inside_color" format="color" />
        <attr name="border_outside_color" format="color"></attr>
    </declare-styleable>
    
	<declare-styleable name="swipelistviewstyle">    
        <attr name="right_width" format="dimension"></attr>  
    </declare-styleable>
    
	
	    <!-- AimActionBar的属性定义 -->

    <declare-styleable name="AimActionBar">
        <attr name="text_left" format="reference|string" />
        <attr name="text_right" format="reference|string" />
        <attr name="text_title" format="reference|string" />
        <attr name="background" format="reference" />
        <attr name="background_left" format="reference" />
        <attr name="background_right" format="reference" />
        <attr name="background_title" format="reference" />
        <attr name="function">
            <flag name="text_left" value="1" />
            <flag name="text_right" value="2" />
            <flag name="text_title" value="4" />
            <flag name="button_left" value="8" />
            <flag name="button_right" value="16" />
            <flag name="button_title" value="32" />
        </attr>
    </declare-styleable>
</resources>